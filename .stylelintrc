{
  "defaultSeverity": "warning",
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order"
  ],
  "ignoreFiles": ["**/*.js", "**/*.json", "**/*.ts", "**/*.svg", "**/*.xml"],
  "at-rule-no-unknown": [
    true,
    {
      "ignoreAtRules": [
        "mixin",
        "define-mixin",
        "include",
        "content",
        "rules",
        "each",
        "import"
      ]
    }
  ]
}
